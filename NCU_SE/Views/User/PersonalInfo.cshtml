@model Member
@{
    ViewData["Title"] = "會員專區";
}
<head>
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/personstyles.css" rel="stylesheet" />

    <!-- <link rel="stylesheet"
              href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"> -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!--datepicker使用-->
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <!--驗證表單使用-->
    <script src="https://jqueryvalidation.org/files/dist/jquery.validate.min.js"></script>
</head>
<script>
    function get_num(num) {
        document.getElementById('img').src = "/img/img" + num + ".png";
    }
</script>

<header class="masthead text-white text-center bg-primary">
    <!-- 增加個人檔案邊框 -->
    <div class="container d-flex align-items-center flex-column" style="border-width:4px;border-style:dashed;border-color:#f3e5e5;padding:10px;">
        <!-- Masthead Avatar Image-->
        <img id="img" width=200 src=@ViewData["log_profile"]>
        <br />
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#example" style="border-color:#808080;background-color:#464242;color:#ffffff;font-family:Microsoft JhengHei;font-weight:bold;margin: 0 10px;">
            修改頭貼角色
        </button>
        <br />

        <!-- Modal -->
        <div class="modal fade" id="example">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header" style="background-color: #2d3e50;">
                        <h5 class="modal-title" id="exampleModalLabel">會員頭貼修改</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">➖</button>
                    </div>
                    <div class="modal-body" style="background-color: #2d3e50;">
                        <!-- Contact Section-->                                   
                        <section class="page-section" id="contact">
                            <form asp-action="PersonalInfo" method="post">
                                <input asp-for="ID" value=@ViewData["logid"] name="id" hidden />
                                <input asp-for="profile" width=200 type="submit"  value="0"><img onclick="get_num('0')" width=200 src="~/img/img0.png" />
                                <input asp-for="profile" width=200 type="submit"  value="1"><img onclick="get_num('1')" width=200 src="~/img/img1.png" />
                                <input asp-for="profile" width=200 type="submit"  value="2"><img onclick="get_num('2')" width=200 src="~/img/img2.png" />
                                <input asp-for="profile" width=200 type="submit"  value="3"><img onclick="get_num('3')" width=200 src="~/img/img3.png" />
                                <input asp-for="profile" width=200 type="submit"  value="4"><img onclick="get_num('4')" width=200 src="~/img/img4.png" />
                                <input asp-for="profile" width=200 type="submit"  value="5"><img onclick="get_num('5')" width=200 src="~/img/img5.png" />
                            </form>
                        </section>
                        
                    </div>
                </div>
            </div>
        </div>


        <!-- Masthead Heading-->
        <h1 class="masthead-heading text-uppercase mb-0" style="border: 6px #286090 solid; padding: 10px;">@ViewData["log_name"]</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-plane"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
        <p class="masthead-subheading font-weight-light mb-0">@ViewData["log_email"]</p>
    </div>
    <br />
    <!-- Submit Button-->
    <div class="shape-ex1">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#update_personal_data" style="border-color:#808080;background-color:#464242;color:#ffffff;font-family:Microsoft JhengHei;font-weight:bold;margin: 0 10px;">
            修改個人資料
        </button>
        <a asp-controller="User" asp-action="UserTicket">
            <button type="button" class="btn btn-primary" style="border-color:#808080;background-color:#464242;color:#ffffff;font-family:Microsoft JhengHei;font-weight:bold;margin: 0 10px;">
                個人機票
            </button>
        </a>
    </div>
</header>


<!-- Modal -->
<div class="modal fade" id="update_personal_data">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">會員資料修改</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">➖</button>
            </div>
            <div class="modal-body">
                <!-- Contact Section-->
                <section class="page-section" id="contact">
                    <div class="container">
                        <!-- Contact Section Heading-->
                        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Profile</h2>
                        <!-- Icon Divider-->
                        <div class="divider-custom">
                            <div class="divider-custom-line"></div>
                            <div class="divider-custom-icon"><i class="fas fa-plane"></i></div>
                            <div class="divider-custom-line"></div>
                        </div>
                        <!-- Contact Section Form-->
                        <div class="row justify-content-center">
                            <div class="col-lg-8 col-xl-7">
                                <!-- To make this form functional, sign up at-->
                                <!-- https://startbootstrap.com/solution/contact-forms-->
                                <!-- to get an API token!-->
                                <form id="contactForm" method="post" asp-action="PersonalInfo">
                                    <input asp-for="ID" value=@ViewData["logid"] name="id" hidden />
                                    <!-- Name input-->
                                    <div class="form-floating mb-3">
                                        <input required class="form-control" id="name" value=@ViewData["log_name"] type="text" placeholder="Enter your name..." asp-for="Name" name="name" />
                                        <label asp-for="Name" for="name">姓名</label>
                                        <span></span><!--這裡會顯示驗證的錯誤訊息-->
                                    </div>


                                    <!-- Date of birth input-->
                                    <div class="form-floating mb-3">
                                        <input disabled="disabled" class="form-control" id="age" value=@ViewData["log_age"] type="text"
                                               style="border-radius: 5px;height: 50px;padding: 0px 0px 0px 40px;" />
                                        <label for="name">年齡</label>
                                    </div>

                                    <!-- Gender input-->
                                    <!--<div class="form-floating mb-3">
                                        <input class="form-control" id="gender" value="女" type="text" placeholder="Enter your message here..." data-sb-validations="required" />
                                        <label for="message">性別</label>
                                        <div class="invalid-feedback" data-sb-feedback="message:required">A message is required.</div>
                                    </div>-->
                                    <!-- Email address input-->
                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="email" name="email" value=@ViewData["log_email"] type="email" placeholder="name@example.com" asp-for="Email" />
                                        <label asp-for="Email" for="email">電子信箱</label>
                                        <span></span><!--這裡會顯示驗證的錯誤訊息-->
                                    </div>
                                    <!-- Phone number input
                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="phone" value="0972341803" type="tel" placeholder="(123) 456-7890" data-sb-validations="required" />
                                        <label for="phone">手機號碼</label>
                                        <div class="invalid-feedback" data-sb-feedback="phone:required">A phone number is required.</div>
                                    </div>
                                    -->

                                    <div class="form-floating mb-3">
                                        <div>
                                            <br />
                                            <label asp-for="Birthday" for="bday">生日</label>
                                            <input required id="bday" type="date" name="Birthday" width="276" value='' asp-for="Birthday" />
                                            <label></label>
                                            <span></span><!--這裡會顯示驗證的錯誤訊息-->
                                            <script>
                                                $('#bday').datepicker({ format: 'yyyy-mm-dd' });//選擇的日期沒辦法出現
                                                $('#bday').val('@ViewData["log_birthday"]');
                                            </script>
                                        </div>
                                        <br />
                                        <div class="invalid-feedback">A name is required.</div>
                                    </div>



                                    <!-- Submit success message-->
                                    <!---->
                                    <!-- This is what your users will see when the form-->
                                    <!-- has successfully submitted-->
                                    <div class="d-none" id="submitSuccessMessage">
                                        <div class="text-center mb-3">
                                            <div class="fw-bolder">Form submission successful!</div>
                                            To activate this form, sign up at
                                            <br />
                                            <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                                        </div>
                                    </div>
                                    <!-- Submit error message-->
                                    <!---->
                                    <!-- This is what your users will see when there is-->
                                    <!-- an error submitting the form-->
                                    <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input form="contactForm" type="submit" value="Save changes" class="btn btn-primary" />
                @*<button type="submit" value="送出" class="btn btn-primary" data-dismiss="modal">Save changes</button>*@
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    /* 表單驗證 */
    jQuery.validator.setDefaults({
        debug: false,
        success: "valid"
    });
    $("#contactForm").validate({
        rules: {
            name: "required",
            email: "required",
            bday: "required",
        },
        errorPlacement: function (error, element) {
            error.appendTo(element.next('label').next('span'));
        }
    });
    jQuery.extend(jQuery.validator.messages, {
        required: "必選欄位",
        email: "請輸入正確格式的電子郵件",
        equalTo: "請再次輸入相同的值",
        minlength: jQuery.validator.format("請輸入一個 長度最少是 {0} 的字串"),
        /*參考：https://iter01.com/917.html */
    });

</script>